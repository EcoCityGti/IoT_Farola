<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado cuando la pestaña está seleccionada -->
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/naranja" /><!-- Cambia el color de fondo cuando se selecciona -->
                    <!--<corners android:radius="60dp" />--><!-- Cambia el radio de las esquinas -->
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Estado por defecto -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/azul" /> <!-- Cambia el color de fondo cuando no está seleccionada -->
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
