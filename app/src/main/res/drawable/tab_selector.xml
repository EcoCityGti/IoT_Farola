<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Estado cuando la pestaña está seleccionada -->
    <item android:state_selected="true">
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#1F9B9B9B" /> <!-- Cambia el color de fondo cuando se selecciona -->
                </shape>
            </item>
        </layer-list>
    </item>
    <!-- Estado por defecto -->
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="#FFFFFF" /> <!-- Cambia el color de fondo cuando no está seleccionada -->
                </shape>
            </item>
        </layer-list>
    </item>
</selector>
